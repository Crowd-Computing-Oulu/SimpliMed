{
  "manifest_version": 2,
  "name": "Text Simplifier",
  "description": "This extentsion will simplify text based on an AI",
  "version": "3.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.pubmed.ncbi.nlm.nih.gov/*"],
  "content_scripts": [
    {
      "js": ["background.js"],
      "css": ["style.css"],
      "matches": ["https://*.pubmed.ncbi.nlm.nih.gov/*"]
    }
  ]
}
